<div class="well ">
	<div class="row-fluid">
		<div class="span2">
			<%= link_to "<i class='icon icon-arrow-up'></i>".html_safe,vote_topic_path(topic),{:class=>"btn btn-mini",:title=>"Vote",:method=>:post}%> <span class="badge "><%= topic.vote_count %> </span> Votes
		</div>
		<div class="span10">
			<strong><%= topic.name%></strong>
			<br />
			<%= topic.description%>
			<br/>
			Posted <em><%= time_ago_in_words(topic.created_at)%> ago</em> by <%=  topic.user.full_name%>
		</div>
	</div>
</div>