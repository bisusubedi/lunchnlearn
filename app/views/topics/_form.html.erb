<div class='well well-lg'>
	<div class='row'>
		<span class='pull-left'><h4>Please vote on the topics you like</h4></span>
			<span class='pull-right'>
				<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
					Add your topic
				</button>
			</span>
		</div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<%= form_for(@topic) do |f| %>
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Your topic</h4>
				</div>
				<div class="modal-body">
					<div class="topic_form">
						<div class='form-group'>
							What topic you want to talk on :
							<br />
							<%= f.text_field :name,{:class=>"form-control", :placeholder => "",:required => true} %>
							<br />
						</div>
						<div class='form-group'>
							Highlights of your talk:
							<br />
							<%= f.text_area :description,{:class=>"form-control" ,:rows=>"4", :placeholder => "",:required => true} %>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<%= f.submit("Post",:class=>"btn btn-primary") %>
				</div>
			<% end %>
		</div>
	</div>
</div>
