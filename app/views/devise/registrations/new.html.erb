<h2>Sign up</h2>
<hr />
<div class="form-horizontal">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<div class="alert alert-error">
		<%= devise_error_messages! %>
	</div>
	<div class="control-group">
		<%= f.label :email,:class=>"control-label" %>
		<div class="controls">
			<%= f.email_field :email,{:placeholder=>"Your email",:required => false} %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :password,:class=>"control-label" %>
		<div class="controls">
			<%= f.password_field :password ,{:placeholder=>"Password",:required => false} %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :password_confirmation,:class=>"control-label" %>
		<div class="controls">
			<%= f.password_field :password_confirmation ,{:placeholder=>"Confirm your password",:required => false} %>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label">&nbsp;</label>
		<div class="controls">
			<%= f.submit "Sign up",class: "btn btn-primary" ,data:{disable_with: "Processing.."} %>
			<br />
			<%= render "devise/shared/links" %>
		</div>
	</div>
	<% end %>
</div>
